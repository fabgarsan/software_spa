{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@components/*": [
        "src/components/*",
        "src/components/index",
      ],
      "@containers/*": [
        "src/containers/*",
        "src/containers/*/index"
      ],
      "@hooks/*": [
        "src/hooks/*",
        "src/hooks/*/index"
      ],
      "@stores/*": [
        "src/stores/*",
        "src/stores/*/index"
      ],
      "@theme/*": [
        "src/theme/*",
        "src/theme/*/index"
      ],
      "@utils/*": [
        "src/utils/*",
        "src/utils/*/index"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
